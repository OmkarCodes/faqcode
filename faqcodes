const scrollingbtn = document.querySelector(".btnarrow");
const scrollingparent = document.querySelector(".scrolling");

scrollingbtn.addEventListener("click", () => {
  //   if (!scrollingparent) return;

  const scrollAmount = 100;
  const maxScroll = scrollingparent.scrollHeight - scrollingparent.clientHeight;

  if (scrollingparent.scrollTop + scrollAmount >= maxScroll) {
    // Scroll back up to the top
    scrollingparent.scrollTo({ top: 0, behavior: "smooth" });
  } else {
    // Scroll down
    scrollingparent.scrollBy({ top: scrollAmount, behavior: "smooth" });
  }
});

